    "license": "GNU General Public License v3.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Xen0Xys/js-express-api-template.git"
    },
    "bugs": {
        "url": "https://github.com/Xen0Xys/js-express-api-template/issues"
    },
    "homepage": "https://github.com/Xen0Xys/js-express-api-template#readme",
    "dependencies": {
        "@types/node": "^20.10.3",
        "argon2": "^0.31.2",
        "ascii-table3": "^0.9.0",
        "axios": "^1.6.2",
        "chalk": "^4.1.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.4",
        "express-validation": "^4.1.0",
        "helmet": "^7.1.0",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "mysql2": "^3.6.2",
        "node-cron": "^3.0.3",
        "sequelize": "^6.35.1",
        "sequelize-joi": "^2.0.1",
        "sqlite3": "^5.1.6"
    },
    "devDependencies": {
        "chai": "^4.3.10",
        "chai-as-promised": "^7.1.1",
        "chai-http": "^4.4.0",
        "eslint": "^8.55.0",
        "eslint-plugin-jsonc": "^2.13.0",
        "mocha": "^10.2.0",
        "nodemon": "^3.0.2",
        "nyc": "^15.1.0"
    },
    "_moduleAliases": {
        "@": "./",
        "@src": "./src",
        "@api": "./src/api",
        "@controllers": "./src/api/controllers",
