{
    "name": "js-express-api-template",
    "version": "1.0.0",
    "description": "This is a basic template for building a RESTful API using Node.js and Express.js. It provides a structured starting point for your API development, with essential components and best practices.",
    "main": "src/app.js",
    "scripts": {
        "dev": "nodemon .",
        "start": "node .",
        "lint": "eslint . --ext .json,.js",
        "lint:fix": "eslint . --ext .json,.js --fix",
        "test": "mocha src/tests --exit",
        "coverage": "nyc pnpm run test"
    },
    "keywords": [],
